<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FallDetectionFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center">

        <ToggleButton
            android:id="@+id/toggle_btn"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn="@string/btn_stop"
            android:textOff="@string/btn_start"
            android:textColor="#FFFFFF"
            android:paddingHorizontal="40dp"
            android:backgroundTint="#777777"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/test"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fall_detection_title1"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="40dp"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fall_history_recycler_view"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_gravity="center"
            />
        <Button

            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_height="35dp"
            android:text="Clear History"
            android:paddingHorizontal="20dp"
            android:backgroundTint="#E6E6E6"
            android:textColor="#777777"
            android:textSize="12sp"

            />


    </LinearLayout>
</LinearLayout>