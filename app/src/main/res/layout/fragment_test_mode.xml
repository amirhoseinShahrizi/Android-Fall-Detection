<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FallDetectionFragment"
    android:orientation="vertical">



    <LinearLayout

        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/test_mode_title1"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"

            />
        <EditText
            android:id="@+id/test_mode_et"
            android:layout_marginTop="24dp"
            android:layout_gravity="center"
            android:layout_width="320dp"
            android:layout_height="160dp"
            android:background="@drawable/rounded_edit_text"
            android:paddingLeft="20dp"
            android:paddingVertical="5dp"
            android:singleLine="false"
            android:hint="Enter Test Records Here"
            android:text="check delete button"
            android:textColor="#777777"

            android:gravity="top"

        />

        <androidx.constraintlayout.utils.widget.ImageFilterButton
            android:id="@+id/clear_ib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_delete_24"
            android:layout_gravity="right"
            android:layout_marginRight="60dp"
            android:layout_marginTop="5dp"
            android:onClick="clearClicked"

        />

        <Button

            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test"
            android:paddingHorizontal="30dp"
            android:backgroundTint="#008080"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/test_mode_title2"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="40dp"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/test_fall_history_recycler_view"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_gravity="center"
            />


    </LinearLayout>
</LinearLayout>